<% layout('layouts/boilerplate') %>

<h1>Codigo do pedido: <%= order.cod_pedido %> </h1>

<div class="card mb-3">
    <div class="row">
        <div class="col-md-12">
            <div class="card-body">
                <h5 class="card-title">ID de compra: <%= order.id_usuario%> </h5>
                <h5 class="card-title mt-4">Quantidade de livros: <%= sale.quantidade %> </h5>
                <h5 class="card-title mb-4">ISBN: <%= sale.isbn %> </h5>
                <p class="card-text">Valor total: $<%= order.valor_total %> </p>
                <p class="card-text">Situacao do pagamento: <%= order.situacao %> </p>

                <% if (order.situacao != 'Aprovado') { %> 
                    <a class="btn btn-success" href="/pedido/<%= order.cod_pedido %> /entrega">Confirmar Pedido</a>
                <% } %> 
            </div>
        </div>
    </div>
</div>