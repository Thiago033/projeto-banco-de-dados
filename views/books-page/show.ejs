<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <p>Mostrando livro por ID (ISBN)</p>
        <p><%= book.isbn %></p>
        <p><%= book.titulo %></p>
        <p class="card-text"> <%= publishers.nome_editora %> </p>

        <form class="d-inline" action="/books/<%=book.isbn%>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
        </form>

        <form action="/pedidos" method="POST">
            <label class="form-label" for="quantidade">Quantidade</label>
            <input class="form-control" type="number" name="quantidade" id="quantidade">

            <input type="hidden" name="isbn" value="<%= book.isbn %>">

            <button class="btn btn-success">Order book</button>
        </form>
    </div>
</div>