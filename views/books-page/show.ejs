<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <p>Mostrando livro por ID (ISBN)</p>
        <p><%= book.isbn %></p>
        <p><%= book.titulo %></p>

        <form class="d-inline" action="/books/<%=book.isbn%>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>