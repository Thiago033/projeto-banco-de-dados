<% layout('layouts/boilerplate') %>

<h1>Todos Livros</h1>


<% for(let book of books) { %>
    <div class="card mb-3 d-flex flex-column">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="https://picsum.photos/200/300" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title mb-3"> <%= book.titulo %> </h2>
                    <p class="card-text">
                        <small class="text-muted"> <%= book.descricao %> </small>
                    </p>
                    <p class="card-text"> <%= book.autor %> </p>
                    <p class="card-text"> <%= book.idioma %> </p>
                    
                    <h5 class="mb-3">$ <%= book.preco %> </h5>
                   
                    
                    <a href="/book/<%= book.isbn%>" class="btn btn-primary align-self-end" style="position:absolute;">View <%= book.titulo %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>

<div>
    <a href="/book/new" class="btn btn-success">Add new book</a>
</div>